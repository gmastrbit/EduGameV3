<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView101"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="25dp"
        android:text="Яка тварина так звучить?"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar64"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:max="160"
        android:progress="90" />

    <ImageView
        android:id="@+id/imageView236"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="playSheep_prir1_g2"
        app:srcCompat="@drawable/sound_yellow" />

    <TextView
        android:id="@+id/textView102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView236"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Прослухати"
        android:textColor="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView237"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="no_prir1_g2"
            android:padding="5dp"
            app:srcCompat="@drawable/cow" />

        <ImageView
            android:id="@+id/imageView238"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="no_prir1_g2"
            android:padding="5dp"
            app:srcCompat="@drawable/rooster" />

        <ImageView
            android:id="@+id/imageView240"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="go_prir1_g2_s"
            android:padding="5dp"
            app:srcCompat="@drawable/sheep" />

        <ImageView
            android:id="@+id/imageView239"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="no_prir1_g2"
            android:padding="5dp"
            app:srcCompat="@drawable/duck" />

    </LinearLayout>
</RelativeLayout>