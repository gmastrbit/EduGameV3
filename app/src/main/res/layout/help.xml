<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:text="Про Розвивайку"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:onClick="showSnackHelp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/robo_help" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Розвиваюча гра для дітей віком від 1 до 4 років, в якій є 2 основних розділи - Ясельна та Друга молодша групи, які в свою чергу поділяються на підрозділи, в кожному з яких є різноманітні цікаві завдання для малечі. Також є розділ Додатково, в якому є цікаві розвиваючі ігри."
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button182"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/yellow_game"
            android:onClick="toUser"
            android:text="Налаштування імені"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:onClick="toInfo"
            android:padding="10dp"
            android:text="v3.0.45.61.177"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>